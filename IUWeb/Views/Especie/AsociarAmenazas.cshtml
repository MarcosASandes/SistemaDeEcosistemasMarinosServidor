@model IEnumerable<EcoMarino.LogicaAplicacion.DTOs.AmenazaDTO>

@{
    ViewData["Title"] = "AsociarAmenazas";
}

<h1>AsociarAmenazas</h1>


@if (ViewBag.msg != null)
{
    <div class="alert alert-dark">
        @ViewBag.msg
    </div>
}


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.gradoPeligro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.gradoPeligro)
                    </td>
                    <td>
                        <form method="post">
                            <input value="@ViewBag.especieId" name="idEspecie" hidden />
                            <input value="@item.id" name="idAmenaza" hidden />

                            <input type="submit" value="Asociar" class="btn btn-primary" />
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>