@model IEnumerable<EcoMarino.LogicaAplicacion.DTOs.EcosistemaDTO>

@{
    ViewData["Title"] = "MostrarEcosistemasInadecuados";
}

<h1>MostrarEcosistemasInadecuados</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.idEstado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.paisResponsable.codigoAlpha)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.nivelConservacion)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.idEstado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.paisResponsable.codigoAlpha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nivelConservacion)
                    </td>
                    <td>
                        @if (Context.Session.GetInt32("LogueadoId") != null)
                        {
                            @Html.ActionLink("Edit", "Edit", "Ecosistema", new { id=item.id }) <span>|</span>
                        }
                        @Html.ActionLink("Details", "Details", "Ecosistema", new {  id=item.id }) |
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

