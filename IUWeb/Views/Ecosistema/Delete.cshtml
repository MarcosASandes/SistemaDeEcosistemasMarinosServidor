            @Html.DisplayFor(model => model.nivelConservacion)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input value="@ViewBag.IdEco" name="id" hidden />
        <input type="checkbox" value="true" name="confirmacion" />
        <label>¿Desea borrar el ecosistema?</label>

        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
