@model IEnumerable<EcoMarino.LogicaAplicacion.DTOs.EspecieDTO>

@{
    ViewData["Title"] = "MostrarEspecies";
}

<h1>MostrarEspecies</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@if (Model.Count() != 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.nombreCientifico)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.idEstado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.nivelConservacion)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombreCientifico)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.idEstado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nivelConservacion)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Especie", new {  id=item.id }) |
                        @Html.ActionLink("Details", "Details", "Especie", new {  id=item.id }) |
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2>No se han encontrado especies.</h2>
}
