@model EcoMarino.LogicaAplicacion.DTOs.UsuarioDTO

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

@if(ViewBag.msg != null)
{
    <div class="alert alert-danger">
        @ViewBag.msg
    </div>
}

@if(TempData["redirectToLogin"] != null)
{
    <div class="alert alert-warning">
        @TempData["redirectToLogin"]
    </div>
}

<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="alias" class="control-label"></label>
                <input asp-for="alias" class="form-control" />
                <span asp-validation-for="alias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="passNormal" class="control-label"></label>
                <input asp-for="passNormal" type="password" class="form-control" />
                <span asp-validation-for="passNormal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Entrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
