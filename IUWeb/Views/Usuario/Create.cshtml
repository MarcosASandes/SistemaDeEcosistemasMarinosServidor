@model EcoMarino.LogicaAplicacion.DTOs.UsuarioDTO

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Usuario</h4>

@if(ViewBag.ErrorMsg != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMsg
    </div>
}

@if (ViewBag.SuccessMsg != null)
{
    <div class="alert alert-success">
        @ViewBag.SuccessMsg
    </div>
}
else
{
    <div class="alert alert-warning">
        <p>La contraseña debe tener:</p>
        <ul>
            <li>Mínimo ocho caracteres.</li>
            <li>Una mayúscula y una mayúscula.</li>
            <li>Un dígito.</li>
            <li>Un caracter especial: .,#;:!</li>
        </ul>
    </div>
}


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="alias" class="control-label"></label>
                <input asp-for="alias" class="form-control" />
                <span asp-validation-for="alias" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="passNormal" class="control-label"></label>
                <input asp-for="passNormal" type="password" class="form-control" />
                <span asp-validation-for="passNormal" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
